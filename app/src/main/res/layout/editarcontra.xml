<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/titulo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:layout_margin="10dp"
        android:text="Editar contraseña"/>

    <EditText
        android:id="@+id/contraseña1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/titulo"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="@string/nueva_contrase_a"
        android:inputType="textPassword"
        android:layout_margin="20dp"/>
    <EditText
        android:id="@+id/contraseña1conf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/contraseña1"
        app:layout_constraintStart_toStartOf="parent"
        android:inputType="textPassword"
        android:hint="@string/confirmar_nueva_contrase_a"
        android:layout_margin="20dp" />

    <Button
        android:id="@+id/confirmar"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/contraseña1conf"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:text="Confirmar"
        android:layout_marginEnd="40dp"
        />
    <Button
        android:id="@+id/cancelar"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/contraseña1conf"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Cancelar"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>